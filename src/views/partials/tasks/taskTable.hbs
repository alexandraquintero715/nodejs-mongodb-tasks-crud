{{#if tasks}}

  <table class="table table-bordered table-hover table-dark"> 
      <thead>
          <tr>
              <th>N.</th>
              <th>Title</th>
              <th>Description</th>
              <th>Operations</th>
          </tr>
      </thead>

      <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
          {{#if done}}
            <a href="/tasks/{{_id}}/toogleDone" class="btn btn-warning btn-sm">Undone</a>
          {{else}}
            <a href="/tasks/{{_id}}/toogleDone" class="btn btn-success btn-sm">Done</a>
          {{/if}}
          
          <a href="/tasks/{{_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
          <a href="/tasks/{{_id}}/edit" class="btn btn-info btn-sm">Update</a>
      </td>
    </tr>  
    {{/each}}
    </tbody>
  </table>

{{ else}}

<div class="h-100 d-flex align-items-center justify-content-center">
 <div class="text-center text-white"> 
    <h1>NO Tasks</h1>
    <img src="/icons/empty.png" class="w-50">
  </div>
</div>
{{/if}} 